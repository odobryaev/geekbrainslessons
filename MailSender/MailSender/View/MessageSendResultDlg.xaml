<Window x:Class="MailSender.View.MessageSendResultDlg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MailSender.View"
        mc:Ignorable="d"
        Title="Result" Height="180" Width="360">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="10">
            <Label x:Name="DialogResult" Content="{Binding ResultText}" HorizontalAlignment="Center" FontWeight="Bold" FontSize="18" Foreground="{Binding ResultTextColor}"/>
            <TextBox x:Name="ErrorText" Margin="0,5,0,0" HorizontalAlignment="Center" TextAlignment="Center" Text="{Binding ErrorText}" Width="300" Height ="Auto" TextWrapping="WrapWithOverflow" Background="{x:Null}" BorderBrush="{x:Null}" />
            <Button Content="OK" HorizontalAlignment="Center" Margin="0,5,0,0" VerticalAlignment="Bottom" Width="80" Height="20" 
                    Command="{Binding Path=OkButtonClick}"/>
        </StackPanel>
        
    </Grid>
</Window>
